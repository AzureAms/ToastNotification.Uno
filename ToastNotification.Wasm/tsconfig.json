{
  "compilerOptions": {
    "module": "none",
//    "declaration": true,
    "diagnostics": true,
    "noImplicitAny": true,
    "outDir": "WasmScripts",
    //"inlineSourceMap": true,
    "locale": "en-US",
    "target": "ES2017",
    // We need ES2018 types to have support for async iteration (used in File System APIs)
    "lib": [ "ES2018", "DOM", "DOM.Iterable" ]
  },
  "include": [
    "ts/**/*"
  ]
}
